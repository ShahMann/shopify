<!-- sections/banner-video.liquid -->

<section class="banner-video-section">
    <div class="video-container">
      {% if section.settings.video_type == 'youtube' %}
        <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{ section.settings.video_id }}" frameborder="0" allowfullscreen></iframe>
      {% elsif section.settings.video_type == 'vimeo' %}
        <iframe width="100%" height="100%" src="https://player.vimeo.com/video/{{ section.settings.video_id }}" frameborder="0" allowfullscreen></iframe>
      {% elsif section.settings.video_type == 'mp4' %}
        <video width="100%" height="100%" controls>
          <source src="{{ section.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% endif %}
    </div>
  </section>
  
  <style>
    .banner-video-section {
      position: relative;
      padding-top: 56.25%; /* 16:9 Aspect Ratio */
      height: 0;
    }
    .banner-video-section .video-container {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .banner-video-section iframe,
    .banner-video-section video {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
  </style>
  