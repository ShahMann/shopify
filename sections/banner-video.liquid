{% render 'banner-video' %}
{% schema %}
{
  "name": "Banner Video",
  "settings": [
    {
      "type": "select",
      "id": "video_type",
      "label": "Video Source",
      "options": [
        { "value": "youtube", "label": "YouTube" },
        { "value": "vimeo", "label": "Vimeo" },
        { "value": "mp4", "label": "MP4" }
      ],
      "default": "youtube"
    },
    {
      "type": "text",
      "id": "video_id",
      "label": "YouTube or Vimeo Video ID",
      "default": "https://www.youtube.com/watch?v=zSBA_apjCf4"
    }
  ]
}
{% endschema %}


