<div class="faq-section">
  {% if section.blocks.size > 0 %}
    <h2>{{ section.settings.faq_title }}</h2>
    <div class="faq-items">
      {% for block in section.blocks %}
        <div class="faq-item">
          {% for question in block.settings.question %}
            {{ question }}
          <p class="faq-question"><strong>{{ question }}</strong></p>
            {% endfor %}
          <p class="faq-answer">{{ block.settings.answer }}</p>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <p>No FAQs available.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection FAQ",
  "enabled_on": {
    "templates": ["collection", "list-collections"]
  },
  "settings": [
    {
      "type": "text",
      "id": "faq_title",
      "label": "Collection FAQ Section Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection FAQ",
    }
  ]
}
{% endschema %}
