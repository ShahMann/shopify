<div class="faq-section">
  {% if section.blocks.size > 0 %}
    <h2>{{ section.settings.faq_title }}</h2>
    <div class="faq-items">
      {% for block in section.blocks %}
        <details class="faq-item">
          <summary class="faq-question"><strong>{{ block.settings.question }}</strong></summary>
          <p class="faq-answer">{{ block.settings.answer }}</p>
        </details>
      {% endfor %}
    </div>
  {% else %}
    <p>No FAQs available.</p>
  {% endif %}
</div>

{% schema %}
{
  "name": "Collection FAQ",
  "enabled_on": {
    "templates": ["collection"]
  },
  "settings": [
    {
      "type": "text",
      "id": "faq_title",
      "label": "Collection FAQ Section Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "text",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection FAQ"
    }
  ]
}
{% endschema %}
<style>
  .faq-section {
  margin: 20px 0;
}

.faq-question {
  cursor: pointer;
  font-size: 16px;
}

.faq-answer {
  padding: 10px 0;
  font-size: 14px;
  color: #555;
}

details {
  margin-bottom: 10px;
}

details[open] .faq-question {
  color: #007acc; /* Highlight color when open */
}

</style>
