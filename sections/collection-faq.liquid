{% if section.settings.faq_question != blank and section.settings.faq_answer != blank %}
  <h2>{{ section.settings.faq_title }}</h2>
  {% for question in section.settings.faq_question %}
    {{ question }}
    {% for answer in section.settings.faq_answer %}
      {{ answer }}
      {% endfor %}
    
  {% endfor %}
  <!-- {{ section.settings.faq_question }}
  {{ section.settings.faq_answer }} -->
  
{% endif %}
{% schema %}
{
  "name": "Collection FAQ",
  "enabled_on": {
    "templates": ["collection", "list-collections"]
  },
  "settings": [
    {
      "type": "text",
      "id": "faq_title",
      "label": "Collection FAQ Section",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "richtext",
      "id": "faq_question",
      "label": "Select Faq"
    },
    {
      "type": "richtext",
      "id": "faq_answer",
      "label": "Select Faq"
    }
  ],
  "presets": [
    {
      "name": "Collection FAQ"
    }
  ]
}
{% endschema %}
