{%- assign blocks = section.blocks -%}
{%- for block in blocks -%}
  {% if block.settings.media_type == "image" and block.settings.image != blank %}
    <div class="banner">
      <a href="{{ block.settings.link }}">
        <img 
          src="{{ block.settings.image | img_url: '1500x1500' }}" 
          style="opacity: {{ block.settings.image_overlay_opacity }}%;" 
          width="1500" 
          height="1500"
        >
      </a>
    </div>
  {% elsif block.settings.media_type == "video" %}
    {% if block.settings.video_src != blank %}
      <div class="banner">
        <iframe src="{{ block.settings.video_src | escape }}" width="100%" height="400" frameborder="0" allowfullscreen></iframe>
      </div>
    {% elsif block.settings.video_link != blank %}
      <div class="banner">
        <video width="100%" height="400" controls>
          <source src="{{ block.settings.video_link | escape }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>
    {% endif %}
  {% endif %}
{%- endfor -%}
