{%- assign blocks = section.blocks -%}
{%- for block in blocks -%}
  {% if block.settings.image!= blank %}
    <div class="banner">
      <a href="{{ block.settings.link }}">
        <img 
          src="{{ block.settings.image | img_url: '1500x1500' }}" 
          style="opacity: {{ block.settings.image_overlay_opacity }}%;" 
          width="1832" 
          height="400"
        >
      </a>
    </div>
  {% elsif block.settings.video_src!= blank %}
    <div class="banner">
      <div class="video-container">
        <iframe 
          src="{{ block.settings.video_src | escape | replace: 'watch?v=', 'embed/' }}" 
          width="100%" 
          height="400" 
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
          allowfullscreen>
        </iframe>
      </div>
    </div>
  {% endif %}
{%- endfor -%}