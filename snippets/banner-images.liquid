{%- assign blocks = section.blocks -%}
{%- for block in blocks -%}
  {% if block.settings.image != blank %}
    <div class="banner">
      <a href="{{ block.settings.link }}">
        <img 
          src="{{ block.settings.image | img_url: '1500x1500' }}" 
          style="opacity: {{ block.settings.image_overlay_opacity }}%;" 
          width="1832" 
          height="400"
        >
      </a>
    </div>
  {% elsif block.settings.video_src != blank %}
    <div class="banner">
      <iframe src="{{ block.settings.video_src | escape }}" width="100%" height="400" frameborder="0" allowfullscreen></iframe>
    </div>
  {% elsif block.settings.direct_url != blank %}
    <div class="banner">
      {{ block.settings.direct_url }}
      <a href="{{ block.settings.direct_url }}" target="_blank">Visit Link</a>
    </div>
  {% endif %}
{%- endfor -%}
