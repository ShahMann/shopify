{%- assign blocks = section.blocks -%}
{%- for block in blocks -%}
  {% if block.settings.image!= blank  %}
    <div class="banner">
      <a href="{{ block.settings.link }}">
        <img src="{{ block.settings.image | img_url: '1500X1500' }}" style="opacity: {{ block.settings.image_overlay_opacity }}%;">
      </a>
    </div>
  {% elsif block.settings.video_src!= blank %}
    <div class="banner">
      <iframe src="{{ block.settings.video_src }}" width="100%" height="400" frameborder="0" allowfullscreen></iframe>
    </div>
  {% endif %}
{%- endfor -%}
